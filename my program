#include <stdio.h>
#include <conio.h

void main()
{
    int *ptr;
    int *ptr1;
    int num1,num2;
    int add,sub,mul;
    float div;

    printf("enter the num 1:");
    scanf("%d",&num1);
    printf("enter the num 2:");
    scanf("%d",&num2);

        ptr1=&num1;
        ptr2=&num2;

        add = *ptr1 + *ptr2;
        sub = *ptr1 - *ptr2;
        mul = *ptr1 * *ptr2;
        div = *ptr1 / *ptr2;

    printf("addition=      %d\n",add);
    printf("subtrection=   %d\n",sub);
    printf("multiplication=%d\n",mul);
    printf("divition=      %f\n",div);

    getch();
}
